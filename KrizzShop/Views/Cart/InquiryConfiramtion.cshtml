@model KrizzShop_Models.OrderHeader

<div class="text-center">
    @if(Model is not null)
    {
        <h1 class="text-info">Order Created</h1>
        <p>Order #@Model.Id created successfully</p>
    }
    else
    {
        <h1 class="text-info">Inquiry Information</h1>
        
        <p>We have recieved your inquiry and someone from our team will contact you shortly!</p>
    }

    <img src="/images/patio.jpg" width="80%" />

</div>